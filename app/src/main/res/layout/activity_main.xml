<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="tv.wanzi.demo.retrofit.activity.MainActivity">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两种请求"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/btn_enqueue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="异步请求"/>

                    <Button
                        android:id="@+id/btn_execute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同步请求"/>
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注解使用"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/btn_http"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@HTTP"/>

                    <Button
                        android:id="@+id/btn_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Url"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_streaming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Streaming"
                        android:textAllCaps="false"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Path"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_query_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@QueryMap"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Body"
                        android:textAllCaps="false"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Field"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Part"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@Header"
                        android:textAllCaps="false"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义Converter、CallAdapter"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/btn_string_converter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="StringConverter"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btn_custom_call_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CustomCallAdapter"
                        android:textAllCaps="false"/>
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用GsonConverter返回Map、List"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/btn_test_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test Map"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_test_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test List"
                        android:textAllCaps="false"/>
                </TableRow>

            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义LoggingInterceptor"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/btn_logging_interceptor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LoggingInterceptor"
                        android:textAllCaps="false"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</layout>